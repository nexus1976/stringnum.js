{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib/",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "lib": ["esnext", "dom"],
    "jsx": "preserve"
  },
  "include": ["src/**/*"],                      
  "exclude": ["node_modules", ".git"],
}
